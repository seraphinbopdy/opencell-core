	<artifactId>opencell-admin-web</artifactId>
	<name>Opencell Admin Web Application - Web Module</name>
	<packaging>war</packaging>
	<build>
		<finalName>opencell</finalName>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<excludes>
					<exclude>**/import-*.sql</exclude>
					<exclude>**/jasper/**/*</exclude>
					<exclude>**/invoiceAdjustment/**/*</exclude>
				</excludes>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>src/main/resources/jasper</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<targetPath>./jasper</targetPath>
				<filtering>false</filtering>
			</resource>
			<resource>
				<directory>src/main/resources/invoiceAdjustment</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<targetPath>./invoiceAdjustment</targetPath>
				<filtering>false</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<!--do not upgrade, needed for maven-replacer -->
				<version>2.0.1</version>
				<configuration>
					<packagingExcludes>**/import*.sql</packagingExcludes>
					<failOnMissingWebXml>false</failOnMissingWebXml>
					<archive>
						<manifestFile>src/main/resources/META-INF/MANIFEST.MF</manifestFile>
					</archive>
				</configuration>
				<executions>
					<execution>
						<id>prepare-war</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>exploded</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>buildnumber-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>create</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<doCheck>false</doCheck>
					<doUpdate>false</doUpdate>
					<shortRevisionLength>41</shortRevisionLength>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>prepare-package</id>
						<phase>prepare-package</phase>
						<configuration>
							<target>
								<copy
									file="src/main/resources/import-${dbtype}.sql"
									tofile="${project.build.directory}/opencell/WEB-INF/classes/import.sql" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
						<id>install</id>
						<phase>install</phase>
						<configuration>
							<target>
								<copy
									file="../lib/opencell-sms-twilioModule.jar"
									tofile="${project.build.directory}/opencell/WEB-INF/lib/opencell-sms-twilioModule.jar" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
