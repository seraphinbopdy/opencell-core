			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources-apiv0</id>
						<phase>package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>./target/opencell/pages/docs/v0</outputDirectory>
							<resources>
								<resource>
									<directory>./target/swagger-ui-master/dist</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copy-resources-apiv1</id>
						<phase>package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>./target/opencell/pages/docs/v1</outputDirectory>
							<resources>
								<resource>
									<directory>./target/swagger-ui-master/dist</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copy-resources-apiv2</id>
						<phase>package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>./target/opencell/pages/docs/v2</outputDirectory>
							<resources>
								<resource>
									<directory>./target/swagger-ui-master/dist</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
			    <groupId>org.apache.maven.plugins</groupId>
			    <artifactId>maven-resources-plugin</artifactId>
			    <executions>
			        <execution>
						<id>apiv0</id>
						<phase>process-resources</phase>
						<configuration>
							<includes>
								<include>
									${project.build.directory}/opencell/pages/docs/v0/*</include>
							</includes>
							<replacements>
								<replacement>
									<token>
										https://petstore.swagger.io/v2/swagger.json</token>
									<value>/opencell/api/rest/v0/openapi.json</value>
								</replacement>
							</replacements>
						</configuration>
					</execution>
					<execution>
						<id>apiv1</id>
						<phase>process-resources</phase>
						<configuration>
							<includes>
								<include>
									${project.build.directory}/opencell/pages/docs/v1/*</include>
							</includes>
							<replacements>
								<replacement>
									<token>
										https://petstore.swagger.io/v2/swagger.json</token>
									<value>/opencell/api/rest/v1/openapi.json</value>
								</replacement>
							</replacements>
						</configuration>
					</execution>
					<execution>
						<id>apiv2</id>
						<phase>process-resources</phase>
						<configuration>
							<includes>
								<include>
									${project.build.directory}/opencell/pages/docs/v2/*</include>
							</includes>
							<replacements>
								<replacement>
									<token>
										https://petstore.swagger.io/v2/swagger.json</token>
									<value>/opencell/api/rest/v2/openapi.json</value>
								</replacement>
							</replacements>
						</configuration>
					</execution>
			        <execution>
						<id>replace-resources</id>
						<phase>process-resources</phase>
						<configuration>
							<includes>
								<include>
									${project.build.directory}/opencell/layout/*.xhtml</include>
								<include>
									${project.build.directory}/opencell/about.xhtml</include>
								<include>
									${project.build.outputDirectory}/version.json</include>
							</includes>
							<replacements>
								<replacement>
									<token>@VERSION_NUMBER@</token>
									<value>${project.version}</value>
								</replacement>
								<replacement>
									<token>@BUILD_NUMBER@</token>
									<value>${buildNumber}</value>
								</replacement>
								<replacement>
									<token>@COMMIT_DATE@</token>
									<value>${commitDate}</value>
								</replacement>
							</replacements>
						</configuration>
					</execution>
			    </executions>
			</plugin>
		</plugins>
	</build>
